# ============================
# PostgreSQL Database Config
# ============================
DB_USER=postgres
DB_HOST=localhost
DB_NAME=DigiMenu
DB_PASSWORD=your_password_here
DB_PORT=5432

# ============================
# Razorpay Payment Gateway
# ============================
# ⚠️ CRITICAL: Never commit actual keys to version control
# Get these from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# ============================
# Message Central OTP Service
# ============================
MESSAGE_CENTRAL_SEND_OTP_URL=https://cpaas.messagecentral.com/verification/v3/send
MESSAGE_CENTRAL_VALIDATE_OTP_URL=https://cpaas.messagecentral.com/verification/v3/validateOtp
MESSAGE_CENTRAL_COUNTRY_CODE=91
MESSAGE_CENTRAL_CUSTOMER_ID=your_customer_id_here
MESSAGE_CENTRAL_AUTH_TOKEN=your_auth_token_here

# ============================
# Security Configuration
# ============================
TRUSTED_CLIENT_KEY=your_trusted_client_key_here
JWT_SECRET=your_jwt_secret_here
COOKIE_SECRET=your_cookie_secret_here

# ============================
# Bunny CDN Configuration
# ============================
BUNNY_ACCESS_KEY=your_bunny_access_key_here
BUNNY_STORAGE_ZONE=your_storage_zone_here
BUNNY_CDN_HOSTNAME=your_cdn_hostname_here

# ============================
# CORS & Domain Configuration
# ============================
ALLOWED_ORIGIN=https://www.servhunt.in

# ============================
# Server Configuration
# ============================
PORT=3000
NODE_ENV=production

# ============================
# Timezone Configuration
# ============================
TZ=Asia/Kolkata
